<h1>Secret Codes</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>User Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @secret_codes.each do |secret_code| %>
      <tr>
        <td><%= secret_code.code %></td>
        <% if secret_code.user_id.nil? %>
          <td> - </td>
        <% else %>
          <td><%= User.find(secret_code.user_id).email %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</br>
<%= form_with(model: @secret_code, local: true) do |form| %>
  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text">Secret Codes</span>
    </div>
    <%= select_tag "count", options_for_select(SecretCode::ITERATION_OPTIONS,10), class: "custom-select" %>
    <div class="input-group-append">
      <%= submit_tag 'Create', class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
